<% quantity.to_i %>

<% if product = Product.find_by(id: product_id) %>
  <% item_total = product.price * quantity %>
  <% @cart_total += item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= humanized_money_with_symbol product.price %>
    </td>
    <td>
    <td>
      <%= quantity %>
    </td>
  </tr>
<% end %>
